= form_for(@image, :html => {:multipart => true, :class => 'form-horizontal'}) do |f|
  - if @image.errors.any?
    #error_explanation
      %h2= pluralize(@image.errors.count, "error") + "prohibited this image from being saved:"

      %ul
        - @image.errors.full_messages.each do |msg|
          %li= msg

  .control-group
    = f.label :file, :class => 'control-label'
    .controls
      = f.file_field :file

  .actions
    = f.submit 'Update'
